{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true
  },
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "project": "./tsconfig.json",
    "ecmaVersion": 2022
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "**/*.d.ts"
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}
